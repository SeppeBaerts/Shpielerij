<Window x:Class="PandaPark2.Windows.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PandaPark2.Windows"
        mc:Ignorable="d"
Title="Help" Height="450" Width="800">
    <StackPanel Background="#58a518">
        <Image Source="/images/gorilla.jpg" Height="300" Stretch="UniformToFill"></Image>
        <TextBlock FontSize="20" 
                       Margin="20" 
                       FontFamily="Museo Sans"
                       >
                Indien je een probleem hebt, stuur dan een mail naar <LineBreak/>
                support@pxl.be of contacteer een lector.
        </TextBlock>
        <Button Click="Close_Click">OK</Button>
    </StackPanel>
</Window>

