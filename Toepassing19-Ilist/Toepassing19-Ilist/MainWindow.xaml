<Window x:Class="Toepassing19_Ilist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toepassing19_Ilist"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <WrapPanel Orientation="Vertical" Grid.Column="1" >
            <Button Name="BtnToevoegen" Content="Toevoegen" Click="BtnToevoegen_Click" Panel.ZIndex="-13" FontSize="20" />
            <Button Name="BtnZoeken" Content="Zoeken" Click="BtnZoeken_Click" Panel.ZIndex="-13" FontSize="20"/>
            <Button Name="BtnVerwijderen" Content="Verwijderen" Click="BtnVerwijderen_Click" Panel.ZIndex="-13" FontSize="20"/>
        </WrapPanel>

        <ListBox Name="LbxBox" Margin="0 50 0 0"/>
        <TextBox Name="TxtModule" Height="50" VerticalAlignment="top"/>

    </Grid>
</Window>
