<Window x:Class="flappy_bird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flappy_bird"
        mc:Ignorable="d"
        Title="Flappy Bird" Height="450" Width="800" Loaded="Window_Loaded" KeyDown="Window_KeyDown">
    <Canvas x:Name="MainCanvas" Background="Black">
        <TextBlock Name="TxbScore" Canvas.Right="20" Text="Score:" Foreground="White" FontSize="20" Panel.ZIndex="15"/>
        <Grid x:Name="MainGrid" Width="800" Height="400">

        </Grid>
    </Canvas>
</Window>
